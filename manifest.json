{
  "manifest_version": 2,

  "name": "Sipcentric - WorkflowMax Connector",
  "short_name": "Sipcentric - WorkflowMax Connector",  
  "description": "Sipcentric - WorkflowMax Connector displays a Chrome notification when an caller's number is associated with a client in WorkflowMax, which can then be clicked to open that client's record.",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "version": "0.1.2",

  "icons": {
    "16": "/assets/wfm-16.png",
    "32": "/assets/wfm-32.png",
    "48": "/assets/wfm-48.png"
  },

  "permissions": [
    "https://api.workflowmax.com/*",
    "https://pbx.sipcentric.com/*",
    "https://ssl.google-analytics.com/*",
    "tabs",
    "notifications"
  ],

  "background": {
    "scripts": [
      "/components/jquery/dist/jquery.js",
      "/components/bootstrap/dist/js/bootstrap.js",
      "/components/jquery-atmosphere/jquery.atmosphere.js",
      "/js/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "/assets/wfm-32.png",
    "default_popup": "/popup.html"
  }
}